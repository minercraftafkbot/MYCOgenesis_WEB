# MYCOgenesis Environment Configuration
# Copy this file to .env.local for development
# Never commit .env files with real values to version control

# ==============================================
# FIREBASE CONFIGURATION
# ==============================================
VITE_FIREBASE_API_KEY=your-firebase-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890abcdef
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ==============================================
# SANITY CMS CONFIGURATION
# ==============================================
VITE_SANITY_PROJECT_ID=your-sanity-project-id
VITE_SANITY_DATASET=production
VITE_SANITY_API_VERSION=2023-12-01
VITE_SANITY_USE_CDN=true

# ==============================================
# APPLICATION SETTINGS
# ==============================================
VITE_APP_NAME=MYCOgenesis
VITE_APP_URL=https://mycogenesis.com
VITE_ENVIRONMENT=development
VITE_DEBUG_MODE=true

# ==============================================
# EXTERNAL SERVICES (Optional)
# ==============================================
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_SENTRY_DSN=https://your-sentry-dsn-here
VITE_CONTACT_EMAIL=info@mycogenesis.com

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
VITE_USE_FIREBASE_EMULATOR=false
VITE_FIREBASE_EMULATOR_AUTH_PORT=9099
VITE_FIREBASE_EMULATOR_FIRESTORE_PORT=8080
VITE_FIREBASE_EMULATOR_STORAGE_PORT=9199
