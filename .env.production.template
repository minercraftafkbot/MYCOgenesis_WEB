# MYCOgenesis Production Environment Template
# Copy this file to .env.production for production deployment
# Replace all placeholder values with actual production configuration

# ==============================================
# FIREBASE CONFIGURATION (Production)
# ==============================================
VITE_FIREBASE_API_KEY=your-production-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-production-project.firebaseapp.com
VITE_FIREBASE_DATABASE_URL=https://your-production-project-default-rtdb.firebaseio.com
VITE_FIREBASE_PROJECT_ID=your-production-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-production-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-production-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-production-analytics-id

# ==============================================
# SANITY CMS CONFIGURATION (Production)
# ==============================================
VITE_SANITY_PROJECT_ID=your-production-sanity-project-id
VITE_SANITY_DATASET=production
VITE_SANITY_API_VERSION=2023-12-01
VITE_SANITY_USE_CDN=true

# ==============================================
# APPLICATION SETTINGS (Production)
# ==============================================
VITE_APP_NAME=MYCOgenesis
VITE_APP_URL=https://mycogenesis.com
VITE_ENVIRONMENT=production
VITE_DEBUG_MODE=false

# ==============================================
# EXTERNAL SERVICES (Production)
# ==============================================
VITE_GOOGLE_ANALYTICS_ID=your-production-analytics-id
VITE_SENTRY_DSN=your-production-sentry-dsn
VITE_CONTACT_EMAIL=info@mycogenesis.com

# ==============================================
# PRODUCTION SETTINGS
# ==============================================
VITE_USE_FIREBASE_EMULATOR=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ANALYTICS=true
