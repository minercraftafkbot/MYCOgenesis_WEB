rules_version = '2';

/**
 * TEMPORARY Firestore Security Rules for Admin Setup
 * IMPORTANT: Use these rules ONLY temporarily to set up the first admin user
 * Then immediately revert to the original secure rules
 */

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================================================
    // HELPER FUNCTIONS
    // ============================================================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getCurrentUser() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }
    
    function hasRole(roles) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             getCurrentUser().data.role in roles &&
             getCurrentUser().data.status == 'active';
    }
    
    function isAdmin() {
      return hasRole(['admin']);
    }
    
    function hasValidTimestamps() {
      return request.resource.data.keys().hasAll(['createdAt', 'updatedAt']) &&
             request.resource.data.createdAt is timestamp &&
             request.resource.data.updatedAt is timestamp;
    }
    
    function isValidDocumentSize(maxSize) {
      return request.resource.size < maxSize;
    }
    
    // ============================================================================
    // TEMPORARY PERMISSIVE USER PROFILES COLLECTION
    // ============================================================================
    
    match /users/{userId} {
      // Allow reading own profile
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // TEMPORARY: Allow creating profiles with admin role for initial setup
      allow create: if isAuthenticated() && 
                       request.auth.uid == userId &&
                       hasValidTimestamps() &&
                       isValidDocumentSize(50000);
      
      // TEMPORARY: Allow updating own profile INCLUDING role changes for admin setup
      // This is temporarily permissive for initial admin setup
      allow update: if isAuthenticated() && 
                       request.auth.uid == userId &&
                       hasValidTimestamps() &&
                       isValidDocumentSize(50000) &&
                       request.resource.data.uid == resource.data.uid;
      
      allow delete: if false; // Never allow deleting profiles
    }
    
    // ============================================================================
    // MINIMAL RULES FOR OTHER COLLECTIONS
    // ============================================================================
    
    // Allow basic functionality for other collections
    match /contact-inquiries/{inquiryId} {
      allow create: if hasValidTimestamps();
      allow read, update, delete: if isAdmin();
    }
    
    match /analytics/{docId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated();
      allow update, delete: if false;
    }
    
    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
